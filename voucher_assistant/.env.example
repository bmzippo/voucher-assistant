# Environment Configuration for OneU Voucher Assistant

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=voucher_knowledge_base

# Google Cloud Configuration
GOOGLE_PROJECT_ID=your-gcp-project-id
GOOGLE_REGION=asia-southeast1
VERTEX_AI_ENDPOINT=your-vertex-ai-endpoint
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/gcp-key.json

# LLM Configuration
#EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
#EMBEDDING_DIMENSION=384

EMBEDDING_MODEL=dangvantuan/vietnamese-embedding
EMBEDDING_DIMENSION=768

# RAG Configuration
MAX_CONTEXT_LENGTH=4000
TOP_K_RESULTS=5
CONFIDENCE_THRESHOLD=0.7

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# React App Configuration
REACT_APP_API_URL=http://localhost:8000
